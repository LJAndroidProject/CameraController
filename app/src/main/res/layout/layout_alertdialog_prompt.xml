<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/alertdialog_width"
    android:layout_height="@dimen/alertdialog_height"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="@dimen/alertdialog_width"
        android:layout_height="@dimen/alertdialog_height"
        style="?AlertDialogTheme"
        android:orientation="vertical"
        android:layout_gravity="center">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/little_title"
        android:textColor="@color/secondary_color_333333"
        android:layout_marginTop="@dimen/marg_top"
        android:gravity="center"
        android:text="提示"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:textSize="@dimen/majority_text"
            android:textColor="@color/secondary_color_666666"
            android:layout_marginTop="@dimen/marg_top"
            android:gravity="center"
            android:text="这是提示内容"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/marg_top"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/secondary_text"
            android:paddingRight="@dimen/secondary_text">
            <Button
                android:id="@+id/bt_no"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="40dp"
                style="?SmallFilletWhiteButton"
                android:layout_marginRight="@dimen/secondary_text"
                android:text="@string/str_cancel"/>

            <Button
                android:id="@+id/bt_yes"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                style="?SmallFilletNavyBlueButton"
                android:enabled="true"
                android:layout_height="40dp"
                android:text="@string/str_yes"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>