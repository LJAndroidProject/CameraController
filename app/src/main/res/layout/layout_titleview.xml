<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_heighr"
    android:background="@color/main_color_098dbe"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_back"
        style="?HomeBackAndRightButtonTheme"
        android:layout_width="@dimen/title_bar_backimage_width"
        android:layout_height="@dimen/title_bar_heighr"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/title_bar_backimage_padding"
        android:paddingRight="@dimen/title_bar_backimage_padding"
        android:src="@mipmap/back_png"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_heighr"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/str_title"
        android:textColor="@color/secondary_color_ffffff"
        android:textSize="@dimen/majority_text" />


    <Button
        android:id="@+id/bt_right"
        style="?HomeBackAndRightButtonTheme"
        android:layout_width="@dimen/title_bar_backimage_width"
        android:layout_height="@dimen/title_bar_heighr"
        android:layout_alignParentRight="true"
        android:text="@string/str_cancel"
        android:textColor="@color/secondary_color_ffffff"
        android:textSize="@dimen/majority_text"
        android:visibility="invisible"/>
</RelativeLayout>