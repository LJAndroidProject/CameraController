<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lj.cameracontroller.view.TitleView
        android:id="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftImage="@mipmap/back_png"
        app:rightImage="@mipmap/right_title"
        app:rightImage1Visible="true"></com.lj.cameracontroller.view.TitleView>

    <RelativeLayout
        android:id="@+id/IPCPlayLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ipcplay_bg">

        <SurfaceView
            android:id="@+id/IPCPlaySurFaceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="6px" />

        <ProgressBar
            android:id="@+id/IPCPlayPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--灰色操作按钮-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:gravity="center_vertical"
                android:minHeight="@dimen/btn_height"
                android:orientation="horizontal">
                <!--预置顶-->
                <LinearLayout
                    android:id="@+id/ll_control_tv_preset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ipc_item_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ipc_control_tv_preset"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:src="@mipmap/preset_icon"
                        android:textColor="@color/secondary_color_ffffff"
                        android:textSize="@dimen/secondary_text" />
                </LinearLayout>
                <!--声音开关-->
                <LinearLayout
                    android:id="@+id/ll_control_tv_sound"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/ipc_item_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ipc_control_tv_sound"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@mipmap/sound_up" />
                </LinearLayout>
                <!--视频清晰度-->
                <LinearLayout
                    android:id="@+id/ll_control_tv_resolution"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/ipc_item_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ipc_control_tv_resolution"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ipc_item_bg"
                        android:gravity="center"
                        android:text="@string/str_fluent"
                        android:textColor="@color/secondary_color_ffffff"
                        android:textSize="@dimen/secondary_text" />
                </LinearLayout>
                <!--上下左右-->
                <LinearLayout
                    android:id="@+id/ll_control_tv_updown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/ipc_item_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ipc_control_tv_updown"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@mipmap/rec_start" />
                </LinearLayout>
                <!--拍照-->
                <LinearLayout
                    android:id="@+id/ll_control_tv_photograph"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/ipc_item_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ipc_control_tv_photograph"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@mipmap/photograph_icon" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@color/secondary_color_999999"
                    android:gravity="center"
                    android:text="@string/str_preset"
                    android:textColor="@color/secondary_color_ffffff"
                    android:textSize="@dimen/secondary_text" />

                <TextView
                    android:id="@+id/tv_sound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/secondary_color_999999"
                    android:gravity="center"
                    android:text="@string/str_mute"
                    android:textColor="@color/secondary_color_ffffff"
                    android:textSize="@dimen/secondary_text" />

                <TextView
                    android:id="@+id/tv_resolution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/secondary_color_999999"
                    android:gravity="center"
                    android:text="@string/str_fluent"
                    android:textColor="@color/secondary_color_ffffff"
                    android:textSize="@dimen/secondary_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/secondary_color_999999"
                    android:gravity="center"
                    android:text="@string/str_updown"
                    android:textColor="@color/secondary_color_ffffff"
                    android:textSize="@dimen/secondary_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/secondary_color_999999"
                    android:gravity="center"
                    android:text="@string/str_photograph"
                    android:textColor="@color/secondary_color_ffffff"
                    android:textSize="@dimen/secondary_text" />
            </LinearLayout>


            <!--底部操作按钮-->
            <LinearLayout
                android:id="@+id/ll_ipc_ptz_control"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/caozuokongjian_bg"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center">

                        <FrameLayout
                            android:id="@+id/fl_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/btn_bg"></FrameLayout>

                        <TextView
                            android:id="@+id/tv_btn_left"
                            android:layout_width="34dp"
                            android:layout_height="74dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/fl_center"
                            android:background="@drawable/left_btn_bg"
                            android:textColor="@color/secondary_color_097ba5" />

                        <TextView
                            android:id="@+id/tv_btn_right"
                            android:layout_width="34dp"
                            android:layout_height="74dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/fl_center"
                            android:background="@drawable/right_btn_bg"
                            android:textColor="@color/secondary_color_097ba5" />


                        <TextView
                            android:id="@+id/tv_btn_down"
                            android:layout_width="74dp"
                            android:layout_height="34dp"
                            android:layout_below="@+id/fl_center"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/down_btn_bg"
                            android:textColor="@color/secondary_color_097ba5" />

                        <TextView
                            android:id="@+id/tv_btn_up"
                            android:layout_width="74dp"
                            android:layout_height="34dp"
                            android:layout_above="@+id/fl_center"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/up_btn_bg"
                            android:textColor="@color/secondary_color_097ba5" />

                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/secondary_color_cccccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <ImageView
                            android:id="@+id/ipc_control_tv_focusingadd"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:gravity="right"
                            android:padding="5dp"
                            android:src="@drawable/add_btn_bg"
                            android:textColor="@color/secondary_color_097ba5"
                            android:textSize="@dimen/main_title" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/str_zoom"
                            android:textColor="@color/secondary_color_097ba5"
                            android:textSize="@dimen/secondary_text" />

                        <ImageView
                            android:id="@+id/ipc_control_tv_focusingreduce"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="left"
                            android:padding="5dp"
                            android:src="@drawable/jian_btn_bg"
                            android:text="@string/str_reduce"
                            android:textColor="@color/secondary_color_097ba5"
                            android:textSize="@dimen/main_title" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <ImageView
                            android:id="@+id/ipc_control_tv_zoomadd"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:gravity="right"
                            android:padding="5dp"
                            android:src="@drawable/add_btn_bg"
                            android:text="@string/str_add"
                            android:textColor="@color/secondary_color_097ba5"
                            android:textSize="@dimen/main_title" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/str_focusing"
                            android:textColor="@color/secondary_color_097ba5"
                            android:textSize="@dimen/secondary_text" />

                        <ImageView
                            android:id="@+id/ipc_control_tv_zoomreduce"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="left"
                            android:padding="5dp"
                            android:src="@drawable/jian_btn_bg"
                            android:textColor="@color/secondary_color_097ba5"
                            android:textSize="@dimen/main_title" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <ImageView
                            android:id="@+id/ipc_control_tv_irisadd"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:gravity="right"
                            android:padding="5dp"
                            android:src="@drawable/add_btn_bg"
                            android:text="@string/str_add"
                            android:textColor="@color/secondary_color_097ba5"
                            android:textSize="@dimen/main_title" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/str_iris"
                            android:textColor="@color/secondary_color_097ba5"
                            android:textSize="@dimen/secondary_text" />

                        <ImageView
                            android:id="@+id/ipc_control_tv_irisreduce"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="left"
                            android:padding="5dp"
                            android:src="@drawable/jian_btn_bg"
                            android:text="@string/str_reduce"
                            android:textColor="@color/secondary_color_097ba5"
                            android:textSize="@dimen/main_title" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"></LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--底部操作按钮-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/caozuokongjian_bg"
                android:orientation="horizontal"
                android:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">


                    <!--机器人上下左右控件-->
                    <RelativeLayout
                        android:id="@+id/rl_jiqiren"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:visibility="visible">

                        <FrameLayout
                            android:id="@+id/fl_jiqirencenter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/btn_jiqiren"></FrameLayout>

                        <TextView
                            android:id="@+id/tv_jiqirenbtn_left"
                            android:layout_width="34dp"
                            android:layout_height="74dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/fl_jiqirencenter"
                            android:background="@drawable/left_btn_bg"
                            android:textColor="@color/secondary_color_097ba5" />

                        <TextView
                            android:id="@+id/tv_jiqirenbtn_right"
                            android:layout_width="34dp"
                            android:layout_height="74dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/fl_jiqirencenter"
                            android:background="@drawable/right_btn_bg"
                            android:textColor="@color/secondary_color_097ba5" />


                        <TextView
                            android:id="@+id/tv_jiqirenbtn_down"
                            android:layout_width="74dp"
                            android:layout_height="34dp"
                            android:layout_below="@+id/fl_jiqirencenter"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/down_btn_bg"
                            android:textColor="@color/secondary_color_097ba5" />

                        <TextView
                            android:id="@+id/tv_jiqirenbtn_up"
                            android:layout_width="74dp"
                            android:layout_height="34dp"
                            android:layout_above="@+id/fl_jiqirencenter"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/up_btn_bg"
                            android:textColor="@color/secondary_color_097ba5" />

                    </RelativeLayout>

                    <!--连续快进布局-->
                    <RelativeLayout
                        android:id="@+id/rl_jiqiren_lianxu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:visibility="gone">

                        <FrameLayout
                            android:id="@+id/fl_jiqirencenter_lianxu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/btn_jiqiren"></FrameLayout>

                        <TextView
                            android:id="@+id/tv_jiqirenbtn_left_lianxu"
                            android:layout_width="34dp"
                            android:layout_height="74dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/fl_jiqirencenter_lianxu"
                            android:background="@drawable/left_btn_lianxu_bg"
                            android:textColor="@color/secondary_color_097ba5" />

                        <TextView
                            android:id="@+id/tv_jiqirenbtn_right_lianxu"
                            android:layout_width="34dp"
                            android:layout_height="74dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/fl_jiqirencenter_lianxu"
                            android:background="@drawable/right_btn_lianxu_bg"
                            android:textColor="@color/secondary_color_097ba5" />


                        <TextView
                            android:id="@+id/tv_jiqirenbtn_down_lianxu"
                            android:layout_width="74dp"
                            android:layout_height="34dp"
                            android:layout_below="@+id/fl_jiqirencenter_lianxu"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/down_btn_lisnxu_bg"
                            android:textColor="@color/secondary_color_097ba5" />

                        <TextView
                            android:id="@+id/tv_jiqirenbtn_up_lianxu"
                            android:layout_width="74dp"
                            android:layout_height="34dp"
                            android:layout_above="@+id/fl_jiqirencenter_lianxu"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/up_btn_lianxu_bg"
                            android:textColor="@color/secondary_color_097ba5" />

                    </RelativeLayout>

                    <!--轨道位置等布局-->
                    <LinearLayout
                        android:id="@+id/ll_shujukongzhi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <!--轨道位置-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="轨道位置:"
                                android:textColor="@color/secondary_color_333333" />

                            <EditText
                                android:id="@+id/et_guidao"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/edit_text_bg" />
                        </LinearLayout>
                        <!--高度位置-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="高度位置:"
                                android:textColor="@color/secondary_color_333333" />

                            <EditText
                                android:id="@+id/et_gaodu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/edit_text_bg" />
                        </LinearLayout>
                        <!--指定站点-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="指定站点:"
                                android:textColor="@color/secondary_color_333333" />

                            <EditText
                                android:id="@+id/et_zhidingzhandian"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/edit_text_bg" />
                        </LinearLayout>
                        <!--指定高度-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="指定高度:"
                                android:textColor="@color/secondary_color_333333" />

                            <EditText
                                android:id="@+id/et_zhidinggaodu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/edit_text_bg" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/secondary_color_cccccc" />

                <!--机器人部分右边控制按钮-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.1"
                    android:orientation="vertical">

