<resources>
  <!--首页顶部返回按钮及右上角按钮颜色样式-->
    <style name="HomeBackAndRightButton">
        <item name="android:background">@drawable/home_backandright_button_bg</item>
    </style>
    <!--大圆角按钮样式 比如登录、注册、下一步等-->
    <style name="LargeFilletButton">
        <!--<item name="android:text">@string/login</item>-->
        <!--<item name="android:layout_width">@dimen/login_button_width</item>-->
        <item name="android:textSize">@dimen/majority_text</item>
        <item name="android:textColor">@color/secondary_color_ffffff</item>
        <item name="android:background">@drawable/loging_button_bg</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/secondary_color_097ba5</item>
        <!--Toolbar颜色-->
        <item name="colorPrimary">@color/main_color_098dbe</item>
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="text_black_14">
        <item name="android:textColor">@color/secondary_color_333333</item>
        <item name="android:textSize">@dimen/secondary_text</item>
    </style>

    <!-- 大型字体样式 -->
    <style name="large_black_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/transparent</item>
    </style>
    <!-- 小型字体样式 -->
    <style name="small_black_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/transparent</item>
    </style>

    <!--dialog styles-->
    <style name="Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>
    <!--通用提示框样式-->
    <style name="AlertDialogprompt">
        <item name="android:background">@drawable/alertdialog_bg</item>
    </style>

    <!--小圆角白底带边框类型按钮，例如：发表类型按钮-->
    <style name="SmallFilletWhiteButton">
        <!--<item name="android:text">@string/publish</item>-->
        <item name="android:textSize">@dimen/majority_text</item>
        <item name="android:textColor">@color/publish_button_textcolor</item>
        <item name="android:background">@drawable/publish_button_bg</item>
        <!--<item name="android:layout_width">@dimen/publish_button_width</item>-->
        <!--<item name="android:layout_height">@dimen/publish_button_height</item>-->
    </style>

    <!--小圆角深蓝色类型按钮， 例如：发送类型按钮-->
    <style name="SmallFilletNavyBlueButton">
        <!--<item name="android:text">@string/send</item>-->
        <item name="android:textSize">@dimen/main_title</item>
        <item name="android:textColor">@color/secondary_color_ffffff</item>
        <item name="android:background">@drawable/send_button_bg</item>
        <!--<item name="android:layout_width">@dimen/send_button_width</item>-->
        <!--<item name="android:layout_height">@dimen/send_button_height</item>-->
    </style>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>
</resources>
